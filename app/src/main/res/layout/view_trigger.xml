<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/two_line_list_item_height">

    <View
        android:id="@+id/isPlayingView"
        android:layout_width="4dp"
        android:layout_gravity="right"
        android:layout_height="match_parent"
        android:background="@color/accent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/step"
        android:layout_marginRight="@dimen/step"
        android:orientation="vertical">

        <TextView
            android:id="@+id/triggerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test test test"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:id="@+id/vibrationNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test test test"
            android:textColor="@color/secondary_text_default_material_dark"
            android:textSize="@dimen/abc_text_size_small_material" />
    </LinearLayout>
</FrameLayout>