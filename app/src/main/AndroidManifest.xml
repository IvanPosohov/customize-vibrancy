<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ivanp.vibro">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="ru.ivanp.vibro.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- ABOUT -->
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/about" />

        <!-- MAIN -->
        <activity
            android:name=".views.MainActivity"
            android:icon="@drawable/logo"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MORSE RECORDER -->
        <activity
            android:name=".views.MorseActivity"
            android:label="@string/morse_recorder"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- MORSE RECORDER SETTINGS -->
        <activity
            android:name=".views.MorseSettingsActivity"
            android:label="@string/morse_recorder_settings"
            android:screenOrientation="portrait" />

        <!-- TOUCH RECORDER -->
        <activity
            android:name=".views.RecorderActivity"
            android:label="@string/tap_recorder"
            android:screenOrientation="portrait" />

        <!-- TOUCH RECORDER SETTINGS -->
        <activity
            android:name=".views.RecorderSettingsActivity"
            android:label="@string/tap_recorder_settings"
            android:screenOrientation="portrait" />

        <!-- SELECT VIBRATION -->
        <activity
            android:name=".views.SelectVibrationActivity"
            android:label="@string/select_vibration" />

        <!-- SETTINGS -->
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait" />

        <!-- TEST -->
        <activity
            android:name=".views.TestingActivity"
            android:label="Testing environment"
            android:screenOrientation="portrait" />

        <!-- RECEIVERS -->
        <!-- Internet state changed -->
        <receiver android:name=".telephony.InternetStateReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Incoming sms -->
        <receiver android:name=".telephony.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Incoming call -->
        <receiver android:name=".telephony.CallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <!-- SERVICES -->
        <service android:name=".telephony.SmsService" />
        <service android:name=".telephony.CallService" />
        <service android:name=".telephony.VibrationService" />
    </application>

</manifest>